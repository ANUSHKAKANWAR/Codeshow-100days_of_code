#include<iostream>
using namespace std;
int main()
{
int a[100],n,j;
cout<<"Enter size of an array\n";
cin>>n;
for(int i=0;i<n;i++)
{
cout<<"Enter element\n";
cin>>a[i];
}
for(i=0;j=n-1;i<n/2;i++;j--)
{
a[i]=a[i]+a[j];
a[j]=a[i]-a[j];
a[i]=a[i]-a[j];
}
cout<<"Displaying Reversed Array\n";
for(i=0;i<n;i++)
cout<<a[i]<<"";
